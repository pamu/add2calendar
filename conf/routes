# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET     /oauth2                     controllers.Application.oauth2()
GET     /oauth2callback             controllers.Application.oauth2callback(state: Option[String], code: Option[String], error: Option[String])
GET     /oncode                     controllers.Application.onCode(code: String)
GET     /calendarList               controllers.Application.calendarList(access_token: String)
GET     /insert                     controllers.Application.insert(access_token: String)
GET     /sniffer                    controllers.Application.sniffer(email: String, pass: String)
GET     /quikadd                    controllers.Application.quickAdd(access_token: String, text: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)